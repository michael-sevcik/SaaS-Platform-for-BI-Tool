@namespace BIManagementPlatform.Modules.Users.Pages
@using BIManagement.Modules.Users.Domain;
@using BIManagement.Modules.Users.Domain.Roles
@page "/costumers"

@inject IUserRepository userRepository;


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Users) // Consider using virtualization if the list is too long - https://learn.microsoft.com/en-us/aspnet/core/blazor/components/virtualization
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Role</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private IEnumerable<ApplicationUser> Users { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var result = await userRepository.GetUsersByRole(Role.Costumer);
        if (result.IsSuccess)
        {
            Users = result.Value;
        }
        else
        {
            // TODO: Handle error
            throw new NotImplementedException();
        }
    }
}